<configuration>
  <packageSources>
    <add key="github" value="https://nuget.pkg.github.com/brazilianscriptguy/index.json" />
  </packageSources>
  <packageSourceCredentials>
    <github>
      <add key="Username" value="%GITHUB_ACTOR%" /> <!-- Windows -->
      <add key="Username" value="$GITHUB_ACTOR" /> <!-- Linux/macOS -->
      <add key="ClearTextPassword" value="%GITHUB_TOKEN%" /> <!-- Windows -->
      <add key="ClearTextPassword" value="$GITHUB_TOKEN" /> <!-- Linux/macOS -->
    </github>
  </packageSourceCredentials>
</configuration>
