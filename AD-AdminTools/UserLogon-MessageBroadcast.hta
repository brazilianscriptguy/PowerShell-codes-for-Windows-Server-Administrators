<html>
<head>
    <title>Message Display</title>
    <hta:application 
        id="oHTA"
        border="none"
        caption="no"
        contextmenu="no"
        innerborder="no"
        scroll="no"
        showintaskbar="no"
    />
    <style>
        body, html {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        img {
            max-width: 100%;
            height: auto;
        }
    </style>
    <script language="VBScript">
        Sub Window_OnLoad
            Dim width, height
            width = 600
            height = 805
            window.resizeTo width, height
            window.moveTo screen.availWidth\2 - width\2, screen.availHeight\2 - height\2

            idTimer = window.setTimeout("vbscript:window.close", 25000)
        End Sub
    </script>
</head>
<body>
    <img src="post-logon-message.png" alt="Post Logon Message"/>
</body>
</html>
