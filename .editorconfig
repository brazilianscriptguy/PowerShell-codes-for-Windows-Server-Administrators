# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf               # Use Unix-style newlines
insert_final_newline = true    # Ensure a final newline at EOF
charset = utf-8                # Use UTF-8 encoding
trim_trailing_whitespace = true # Remove trailing whitespace

# Settings for PowerShell, VBScript, and HTA files
[*.{ps1,vbs,hta}]
indent_style = space
indent_size = 4

# Settings for YAML and JSON files
[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

# Settings for Markdown files
[*.md]
trim_trailing_whitespace = false # Allow trailing whitespace for markdown
indent_style = space
indent_size = 2

# Settings for plain text files
[*.txt]
indent_style = space
indent_size = 2

# Settings for XML and HTML files
[*.{xml,html}]
indent_style = space
indent_size = 2

# Settings for Python files
[*.py]
indent_style = space
indent_size = 4

# Settings for JavaScript and TypeScript files
[*.{js,ts}]
indent_style = space
indent_size = 2

# Settings for C, C++, and C# files
[*.{c,cpp,h,hpp,cs}]
indent_style = space
indent_size = 4

# Settings for backup files (.bak)
[*.bak]
charset = binary               # Treat backup files as binary

# Settings for .csproj files (C# project files)
[*.csproj]
indent_style = space
indent_size = 2

# Settings for .nuspec files (NuGet specification files)
[*.nuspec]
indent_style = space
indent_size = 2

# Settings for .nupkg files (NuGet package files)
[*.nupkg]
charset = binary               # Treat NuGet package files as binary

# Settings for .config files (configuration files)
[*.config]
indent_style = space
indent_size = 2

# Treat binary files as binary
[*.{exe,pdf,zip,tar,gz,7z,iso}]
charset = binary

# Additional settings for shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Settings for configuration files
[*.{conf,ini}]
indent_style = space
indent_size = 4

# Settings for PNG files (image files)
[*.png]
charset = binary               # Treat PNG files as binary
