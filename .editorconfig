# Top-most EditorConfig file
root = true

# Use Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Matches PS1, VBS, and HTA files
[*.{ps1,vbs,hta}]
indent_style = space
indent_size = 4

# Matches TXT files
[*.txt]
indent_style = space
indent_size = 2

# Treat EXE files as binary
[*.exe]
charset = binary

# Treat PDF files as binary
[*.pdf]
charset = binary
