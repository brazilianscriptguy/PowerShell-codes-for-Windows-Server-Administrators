<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Target Framework -->
    <TargetFramework>net7.0</TargetFramework>
    
    <!-- Package Metadata -->
    <Authors>Luiz Hamilton Silva</Authors>
    <Company>Brazilianscriptguy</Company>
    <Product>PowerShell Automation Library</Product>
    <Description>A library of reusable PowerShell scripts and utilities for system administrators.</Description>
    <PackageTags>PowerShell;Automation;SysAdmin</PackageTags>
    <RepositoryUrl>https://github.com/brazilianscriptguy/Windows-SysAdmin-ProSuite</RepositoryUrl>
    
    <!-- Versioning -->
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <PackageReleaseNotes>This is the initial release of the PowerShell Automation Library.</PackageReleaseNotes>
    
    <!-- Optional: Make the package CLS-compliant -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
  </PropertyGroup>

  <!-- Add dependencies if needed -->
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
