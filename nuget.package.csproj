<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <NoBuild>true</NoBuild>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <PackageId>Windows-SysAdmin-ProSuite</PackageId>
    <Authors>Luiz Hamilton</Authors>
    <Company>Brazilianscriptguy</Company>
    <Description>
      A comprehensive suite of PowerShell scripts and configuration files for Windows System Administration.
    </Description>
    <Version>$(Version)</Version>
    <PackageOutputPath>./artifacts</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include Scripts -->
    <Content Include="Scripts/**" PackagePath="content/" />
    <!-- Include Config Files -->
    <Content Include="Config/**" PackagePath="content/" />
    <!-- Include Documentation -->
    <Content Include="Docs/**" PackagePath="content/" />
    <!-- Include README and LICENSE -->
    <Content Include="README.md" PackagePath="content/" />
    <Content Include="LICENSE" PackagePath="content/" />
  </ItemGroup>

</Project>
