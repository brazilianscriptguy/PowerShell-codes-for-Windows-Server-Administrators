<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <NoBuild>true</NoBuild> <!-- Disable the build process -->
    <TargetFramework>net7.0</TargetFramework> <!-- Required but not used -->
    <PackageId>Windows-SysAdmin-ProSuite</PackageId>
    <Authors>Luiz Hamilton Silva</Authors>
    <Company>Brazilianscriptguy</Company>
    <Product>Windows-SysAdmin-ProSuite</Product>
    <Description>
      Comprehensive suite of PowerShell and VBScript tools automates Active Directory tasks, advances forensic analysis, 
      and simplifies script creation. Designed for managing Windows Servers and workstations, these tools ensure accuracy, 
      efficiency, scalability, and adaptability.
    </Description>
    <PackageTags>PowerShell;Automation;SysAdmin;ActiveDirectory;Forensics</PackageTags>
    <RepositoryUrl>https://github.com/brazilianscriptguy/Windows-SysAdmin-ProSuite</RepositoryUrl>
    <PackageOutputPath>./artifacts</PackageOutputPath>
    <Version>$(Version)</Version>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NoWarn>NU5110;NU5111;NU5123</NoWarn> <!-- Suppress warnings about missing files -->
  </PropertyGroup>

  <!-- Include scripts and config files in the package -->
  <ItemGroup>
    <Content Include="Scripts/**" PackagePath="content/" />
    <Content Include="LICENSE" PackagePath="content/" />
    <Content Include="README.md" PackagePath="content/" />
  </ItemGroup>
</Project>
