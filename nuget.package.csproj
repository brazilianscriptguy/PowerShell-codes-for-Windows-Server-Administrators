<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <NoBuild>true</NoBuild>
    <PackageId>Windows-SysAdmin-ProSuite</PackageId>
    <Authors>Your Name</Authors>
    <Company>Your Company</Company>
    <Description>A collection of scripts and configuration files for Windows system administration.</Description>
    <Version>$(Version)</Version>
    <PackageOutputPath>./artifacts</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include the placeholder DLL -->
    <Content Include="bin/Debug/net7.0/PlaceholderDll.dll" PackagePath="lib/net7.0" />
    <!-- Include other scripts and config files -->
    <Content Include="Scripts/**" PackagePath="content/" />
    <Content Include="Config/**" PackagePath="content/" />
  </ItemGroup>

</Project>
